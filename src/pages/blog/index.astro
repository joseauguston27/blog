---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate)
);
---

<Layout title="Blog">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-8">Math Blog</h1>
    
    <div class="space-y-8">
      {posts.map((post) => (
        <article class="border-b border-gray-200 dark:border-gray-700 pb-8">
          <h2 class="text-2xl font-bold mb-2">
            <a href={`/blog/${post.slug}`} class="hover:text-primary-600 dark:hover:text-primary-400">
              {post.data.title}
            </a>
          </h2>
          <div class="text-sm text-gray-500 dark:text-gray-400 mb-2">
            {new Date(post.data.pubDate).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </div>
          <p class="text-gray-600 dark:text-gray-300">
            {post.data.description}
          </p>
          <a 
            href={`/blog/${post.slug}`} 
            class="inline-block mt-2 text-primary-600 dark:text-primary-400 hover:underline"
          >
            Read more â†’
          </a>
        </article>
      ))}
    </div>
  </div>
</Layout>
